<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:baselineAligned="false"
              android:divider="?android:attr/dividerHorizontal"
              android:orientation="horizontal"
              android:showDividers="middle"
    tools:context="calaerts.be.attendancesheet.activities.klas.list.KlasListActivity">

    <!--
    This layout is a two-pane layout for the Classes
    master/detail flow.
    
    -->

    <android.support.v7.widget.RecyclerView xmlns:android="http://schemas.android.com/apk/res/android"
                                            xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/class_list"
        android:name="calaerts.be.attendancesheet.ClassListFragment"
                                            android:layout_width="@dimen/item_width"
                                            android:layout_height="match_parent"
                                            app:layoutManager="LinearLayoutManager"
        tools:context="calaerts.be.attendancesheet.activities.klas.list.KlasListActivity"
                                            tools:listitem="@layout/class_list_content"/>

    <FrameLayout
        android:id="@+id/class_detail_container"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"/>

</LinearLayout>
